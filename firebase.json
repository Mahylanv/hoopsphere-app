{
  "functions": [
    {
      "source": "auth-sync",
      "runtime": "nodejs20",
      "codebase": "auth-sync",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build -- --project \"$RESOURCE_DIR/tsconfig.json\""
      ]
    },
    {
      "source": "stripe",
      "codebase": "stripe",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  }
}
