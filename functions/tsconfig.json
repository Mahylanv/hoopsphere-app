{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node",
    "noEmitOnError": true
  },
  "files": ["src/index.ts"],
  "exclude": [
    "node_modules",
    "../node_modules"
  ]
}
