rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isClub(uid) {
      return exists(/databases/$(database)/documents/clubs/$(uid));
    }

    match /joueurs/{uid} {

      allow read: if true;

      allow create, update, delete: if
        request.auth != null &&
        request.auth.uid == uid;

      match /gallery/{mediaId} {
        allow read: if true;
        allow write: if
          request.auth != null &&
          request.auth.uid == uid;
      }

      match /favoriteClubs/{clubUid} {
        allow read, create, delete: if
          request.auth != null &&
          request.auth.uid == uid;
        allow update: if false;
      }

      match /matches/{matchId} {
        allow read: if true;
        allow create, update, delete: if
          request.auth != null &&
          request.auth.uid == uid &&
          request.resource.data.playerUid == uid;
      }

      match /views/{viewId} {
        allow create: if request.auth != null;
        allow read: if
          request.auth != null &&
          request.auth.uid == uid;
        allow update, delete: if false;
      }

      match /likedPosts/{postId} {
        allow read, create, delete: if
          request.auth != null &&
          request.auth.uid == uid;
        allow update: if false;
      }

      match /posts/{postId} {
        allow read: if
          resource.data.visibility == "public" ||
          (resource.data.visibility == "clubs" && request.auth != null && isClub(request.auth.uid)) ||
          (request.auth != null && request.auth.uid == uid);

        allow create, update, delete: if
          request.auth != null &&
          request.auth.uid == uid;
      }
    }

    match /posts/{postId} {

      allow read: if
        resource.data.visibility == "public"
        ||
        (
          request.auth != null &&
          (
            request.auth.uid == resource.data.playerUid ||
            (resource.data.visibility == "clubs" && isClub(request.auth.uid))
          )
        );

      allow create: if
        request.auth != null &&
        request.resource.data.playerUid == request.auth.uid &&
        request.resource.data.mediaUrl is string &&
        request.resource.data.mediaType in ["image", "video"] &&
        request.resource.data.postType in ["highlight", "match", "training"] &&
        request.resource.data.visibility in ["public", "private", "clubs"] &&
        request.resource.data.createdAt is timestamp;

      allow update: if
        request.auth != null &&
        (
          request.auth.uid == resource.data.playerUid
          ||
          (
            request.resource.data.diff(resource.data).changedKeys().hasOnly(["likeCount"]) &&
            request.resource.data.likeCount is int
          )
        );

      allow delete: if
        request.auth != null &&
        request.auth.uid == resource.data.playerUid;
    }

    match /posts/{postId}/likes/{uid} {

      allow read: if request.auth != null;

      allow create, delete: if
        request.auth != null &&
        request.auth.uid == uid;

      allow update: if false;
    }

    match /gallery/{mediaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /clubs/{document=**} {
      allow read: if true;
    }

    match /clubs/{clubUid} {

      allow read: if true;

      allow create, update, delete: if
        request.auth != null &&
        request.auth.uid == clubUid;

      match /favoritePlayers/{playerUid} {
        allow read, create, delete: if
          request.auth != null &&
          request.auth.uid == clubUid;
        allow update: if false;
      }

      match /equipes/{teamId} {
        allow read: if true;

        allow create, update, delete: if
          request.auth != null &&
          request.auth.uid == clubUid;

        match /joueurs/{playerUid} {
          allow read: if true;
          allow create, update, delete: if
            request.auth != null &&
            request.auth.uid == clubUid;
        }
      }

      match /offres/{offerId} {
        allow read: if true;

        allow create, update, delete: if
          request.auth != null &&
          request.auth.uid == clubUid;

        match /candidatures/{candId} {
          allow create: if
            request.auth != null &&
            request.resource.data.clubUid == clubUid &&
            request.resource.data.offerId == offerId &&
            request.resource.data.applicantUid == request.auth.uid &&
            request.resource.data.createdAt is timestamp &&
            request.resource.data.status in ["pending", "accepted", "rejected"];

          allow read, update, delete: if
            request.auth != null &&
            request.auth.uid == clubUid;
        }
      }

      match /views/{viewId} {
        // Enregistrement des vues de profil club
        allow create: if
          request.auth != null &&
          request.resource.data.viewerUid == request.auth.uid;

        // Lecture réservée au club propriétaire
        allow read: if
          request.auth != null &&
          request.auth.uid == clubUid;

        allow update, delete: if false;
      }

      match /likedPosts/{postId} {
        allow read, create, delete: if
          request.auth != null &&
          request.auth.uid == clubUid;
        allow update: if false;
      }
    }

    match /{path=**}/offres/{offerId} {
      allow read: if true;
    }

    match /{path=**}/candidatures/{candId} {
      allow read, update, delete: if
        request.auth != null &&
        resource.data.clubUid is string &&
        request.auth.uid == resource.data.clubUid;
    }

    match /annonces/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
